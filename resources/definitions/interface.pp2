
//
// Interface definition
//

#InterfaceDefinition -> Railt\SDL\Frontend\AST\Definition\InterfaceDefinitionNode
  : Description()?
    InterfaceDefinitionHead()
    InterfaceDefinitionBody()?
  ;

#InterfaceExtension
  : Description()?
    ::T_EXTEND:: InterfaceDefinition()
  ;

InterfaceDefinitionHead
  : ::T_INTERFACE:: TypeName()
    TypeDefinitionImplementations()?
    Directives()?
  ;

InterfaceDefinitionBody
  : ::T_BRACE_OPEN::
      FieldDefinitions()?
    ::T_BRACE_CLOSE::
  ;
