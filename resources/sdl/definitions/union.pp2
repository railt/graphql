
//
// Union definition
//

#UnionDefinition
  : Description()?
    UnionDefinitionHead()
    UnionDefinitionBody()?
  ;

#UnionExtension
  : Description()?
    ::T_EXTEND:: UnionDefinition()
  ;

UnionDefinitionHead
  : ::T_UNION:: TypeDefinitionHeader()
    Directives()?
  ;

UnionDefinitionBody
  : ::T_EQUAL:: __unionDefinitionTargets()?
  ;

__unionDefinitionTargets
  : ::T_OR::? TypeInvocationHeader()
    ( ::T_OR:: TypeInvocationHeader() )*
    #UnionDefinitionTargets
  ;
