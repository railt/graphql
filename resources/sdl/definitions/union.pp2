
//
// Union definition
//

#UnionDefinition
  : Description()?
    UnionDefinitionHead()
    UnionDefinitionBody()?
  ;

#UnionExtension
  : Description()?
    ::T_EXTEND:: UnionDefinition()
  ;

UnionDefinitionHead
  : ::T_UNION:: TypeDefinition()
    Directive()*
  ;

UnionDefinitionBody
  : ::T_EQUAL:: UnionDefinitionTargets()?
  ;

#UnionDefinitionTargets
  : ::T_OR::? TypeInvocation() (
      ::T_OR:: TypeInvocation()
    )*
  ;
