
//
// Schema definition
//

#SchemaDefinition
  : Description()?
    SchemaDefinitionHead()
    SchemaDefinitionBody()?
  ;

#SchemaExtension
  : Description()?
    ::T_EXTEND:: SchemaDefinition()
  ;

SchemaDefinitionHead
  : ::T_SCHEMA:: TypeDefinitionHeader()?
    Directives()?
  ;

SchemaDefinitionBody
  : ::T_BRACE_OPEN::
      SchemaFieldDefinition()*
    ::T_BRACE_CLOSE::
  ;

//
// SchemaField definition
//

#SchemaFieldDefinition
  : Name() ::T_COLON:: TypeHint()
  ;
