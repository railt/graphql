
//
// Object definition
//

#ObjectDefinition
  : Description()?
    ObjectDefinitionHead()
    ObjectDefinitionBody()?
  ;

#ObjectExtension
  : Description()?
    ::T_EXTEND:: ObjectDefinition()
  ;

ObjectDefinitionHead
  : ::T_TYPE:: TypeDefinition()
    TypeDefinitionImplements()?
    Directive()*
  ;

ObjectDefinitionBody
  : ::T_BRACE_OPEN::
      FieldDefinition()*
    ::T_BRACE_CLOSE::
  ;
