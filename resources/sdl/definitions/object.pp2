
//
// Object definition
//

#ObjectDefinition -> Railt\SDL\Frontend\AST\Definition\ObjectDefinitionNode
  : Description()?
    ObjectDefinitionHead()
    ObjectDefinitionBody()?
  ;

#ObjectExtension
  : Description()?
    ::T_EXTEND:: ObjectDefinition()
  ;

ObjectDefinitionHead
  : ::T_TYPE:: TypeName()
    TypeDefinitionImplementations()?
    Directives()?
  ;

ObjectDefinitionBody
  : ::T_BRACE_OPEN::
      FieldDefinitions()?
    ::T_BRACE_CLOSE::
  ;
