
//
// Directive definition
//

#DirectiveDefinition
  : Description()?
    DirectiveDefinitionHead()
    DirectiveDefinitionBody()
  ;

DirectiveDefinitionHead
  : ::T_DIRECTIVE:: ::T_DIRECTIVE_AT:: TypeDefinition()
    ArgumentDefinitions()?
  ;

DirectiveDefinitionBody
  : ::T_ON:: DirectiveLocations()
  ;


//
// DirectiveLocation definition
//

#DirectiveLocations
  : ::T_OR::? DirectiveLocation()
    ( ::T_OR:: DirectiveLocation() )*
  ;

#DirectiveLocation
  : ConstantName()
  ;
