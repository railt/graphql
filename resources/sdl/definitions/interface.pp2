
//
// Interface definition
//

#InterfaceDefinition
  : Description()?
    InterfaceDefinitionHead()
    InterfaceDefinitionBody()?
  ;

#InterfaceExtension
  : Description()?
    ::T_EXTEND:: InterfaceDefinition()
  ;

InterfaceDefinitionHead
  : ::T_INTERFACE:: TypeDefinitionHeader()
    TypeDefinitionImplements()?
    Directives()?
  ;

InterfaceDefinitionBody
  : ::T_BRACE_OPEN::
      FieldDefinition()*
    ::T_BRACE_CLOSE::
  ;
