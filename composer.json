{
    "name": "railt/sdl",
    "license": "MIT",
    "type": "library",
    "homepage": "http://railt.org",
    "description": "The Railt Framework implementation of GraphQL type-system parser",
    "keywords": [
        "graphql",
        "idl",
        "sdl",
        "otd",
        "ast",
        "reflection",
        "compiler"
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/sdl"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phplrt/runtime": "^2.3",
        "phplrt/grammar": "^2.3",
        "psr/simple-cache": "^1.0",
        "cache/array-adapter": "^1.0",
        "railt/contracts": "^2.0",
        "railt/dumper": "^2.0",
        "railt/type-system": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Railt\\SDL\\": "src"
        }
    },
    "require-dev": {
        "psr/http-message": "^1.0",
        "symfony/console": "~3.4|~4.0|~5.0|~6.0",
        "symfony/var-dumper": "~3.4|~4.0|~5.0|~6.0",
        "phpunit/phpunit": "^8.3",
        "phplrt/compiler": "^2.3",
        "laminas/laminas-code": "~3.4"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\SDL\\Tests\\": "tests"
        }
    },
    "extra": {
        "railt": {
            "extensions": [
                "Railt\\SDL\\TypeSystemServiceExtension"
            ]
        },
        "branch-alias": {
            "1.3.x": "1.3.x-dev",
            "1.4.x": "1.4.x-dev",
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
