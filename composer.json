{
    "name": "railt/sdl",
    "license": "MIT",
    "type": "library",
    "homepage": "http://railt.org",
    "description": "The Railt Framework implementation of GraphQL type-system parser",
    "keywords": [
        "graphql",
        "idl",
        "sdl",
        "otd",
        "ast",
        "reflection",
        "compiler"
    ],
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/sdl"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phplrt/parser": "~2.2.2",
        "psr/simple-cache": "^1.0",
        "railt/contracts": "^2.0",
        "graphql/type-system-contracts": "~14.0|dev-master@dev"
    },
    "autoload": {
        "psr-4": {
            "Railt\\SDL\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^8.3",
        "phplrt/phplrt": "~2.2.2",
        "twig/twig": "~2.12"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\SDL\\Tests\\Unit\\": "tests"
        }
    },
    "scripts": {
        "phpunit": "@php vendor/phpunit/phpunit/phpunit"
    },
    "extra": {
        "railt": {
            "extensions": [
                "Railt\\SDL\\TypeSystemServiceExtension"
            ]
        },
        "branch-alias": {
            "1.3.x": "1.3.x-dev",
            "1.4.x": "1.4.x-dev",
            "dev-master": "2.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
