{
    "name": "railt/sdl",
    "type": "library",
    "description": "The GraphQL RL/SDL grammar and compiler",
    "license": "MIT",
    "keywords": [
        "graphql",
        "idl",
        "sdl",
        "otd",
        "ast",
        "reflection",
        "compiler"
    ],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/sdl"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-mbstring": "*",
        "ext-json": "*",
        "psr/log": "~1.0",
        "railt/io": "1.2.*|dev-master",
        "railt/lexer": "1.2.*|dev-master",
        "railt/parser": "1.2.*|dev-master",
        "railt/reflection": "1.2.*|dev-master",
        "justinrainbow/json-schema": "^3.0 || ^4.0 || ^5.0"
    },
    "autoload": {
        "psr-4": {
            "Railt\\SDL\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "monolog/monolog": "~1.9",
        "phpunit/phpunit": "^6.5",
        "symfony/finder": "3.*|4.*",
        "illuminate/support": "~5.5",
        "railt/compiler": "1.2.*|dev-master",
        "railt/console": "1.2.*|dev-master"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\SDL\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "Railt\\Console\\Manifest::discover"
        ]
    },
    "extra": {
        "railt": {
            "commands": [
                "Railt\\SDL\\Console\\SDLCompileCommand",
                "Railt\\SDL\\Console\\SDLAnalyzeCommand",
                "Railt\\SDL\\Console\\SDLGrammarCompileCommand"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
